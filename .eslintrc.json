{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": ["plugin:prettier/recommended", "plugin:jest-dom/recommended", "react", "prettier"],
  "rules": { "prettier/prettier": ["error", { "endOfLine": "auto" }] },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "react",
    "testing-library",
    "jest-dom",
    "@typescript-eslint"
  ]
}
