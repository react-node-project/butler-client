{
  "swagger": "2.0",
  "info": {
    "title": "Butler API",
    "description": "Butler App open api 설명서 입니다",
    "version": "1.0.0"
  },
  "host": "www",
  "schemes": ["https"],
  "paths": {
    "/location": {
      "post": {
        "description": "지역 정보를 보내서 서비스 중인 지역인지 확인한다",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "보내는 값들",
            "schema": {
              "type": "object",
              "properties": {
                "address": {
                  "type": "string",
                  "description": "주소이름",
                  "example": "영국 리버풀"
                },
                "location": {
                  "type": "object",
                  "properties": {
                    "lat": {
                      "type": "number",
                      "description": "위도",
                      "example": 53.4083714
                    },
                    "lng": {
                      "type": "number",
                      "description": "경도",
                      "example": -2.9915726
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "number",
                  "example": 1000
                },
                "message": {
                  "type": "string",
                  "example": "ok"
                }
              }
            }
          },
          "400": {
            "description": "필수 데이터가 누락되어있을때",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "number",
                  "example": 2000
                },
                "message": {
                  "type": "string",
                  "example": "missed latitude or longitude or address"
                }
              }
            }
          },
          "404": {
            "description": "서비스 중인 장소가 아닐때",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "number",
                  "example": 3000
                },
                "message": {
                  "type": "string",
                  "example": "Not a serviced place"
                }
              }
            }
          }
        }
      }
    },
    "/location/inactive": {
      "post": {
        "description": "비활성화 지역에 대한 서비스 장소를 이메일로 보내기",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "description": "이메일",
                  "example": "butler@gmail.com"
                },
                "location": {
                  "type": "object",
                  "properties": {
                    "lat": {
                      "type": "number",
                      "description": "위도",
                      "example": 53.4083714
                    },
                    "lng": {
                      "type": "number",
                      "description": "경도",
                      "example": -2.9915726
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "400": {
            "description": "필수 데이터가 누락되어있을때",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "number",
                  "example": 2000
                },
                "message": {
                  "type": "string",
                  "example": "missed latitude or longitude or email"
                }
              }
            }
          }
        }
      }
    },
    "/getstores": {
      "get": {
        "description": "상점 조회",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "query",
            "name": "lastitude",
            "schema": {
              "type": "number",
              "example": 10.8007819
            },
            "description": "위도",
            "required": true
          },
          {
            "in": "query",
            "name": "longitude",
            "schema": {
              "type": "number",
              "example": 106.7474015
            },
            "description": "경도",
            "required": true
          },
          {
            "in": "query",
            "name": "distance",
            "schema": {
              "type": "number",
              "example": 5
            },
            "description": "최대 거리(마일)"
          },
          {
            "in": "query",
            "name": "filter",
            "schema": {
              "type": "string",
              "example": "delivery"
            },
            "description": "리스트 정렬 3가지",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "MESSAGE_CODE": {
                  "type": "string",
                  "example": "01"
                },
                "MESSAGE_NAME": {
                  "type": "string",
                  "example": "Success"
                },
                "rowCount": {
                  "type": "number",
                  "example": 1
                },
                "list": {
                  "type": "array",
                  "example": [
                    {
                      "store_no": "string",
                      "store_name": "string",
                      "service_type_code": "string",
                      "phone_no": "string",
                      "minimum_payment_amount": "string",
                      "sale_from_time": "string",
                      "sale_to_time": "string",
                      "delivery_from_time": "string",
                      "delivery_to_time": "string",
                      "city_code": "string",
                      "district_code": "string",
                      "address": "string",
                      "latitude": "string",
                      "longitude": "string",
                      "manager_phone_no": "string",
                      "national_code": "string",
                      "notify": "string",
                      "bank_code": "string",
                      "bank_account_no": "string",
                      "store_image_url": "string",
                      "descriptions": ["string", "string", "string"],
                      "review": "string"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "필수 데이터가 누락되어있을때",
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "number",
                  "example": 2000
                },
                "message": {
                  "type": "string",
                  "example": "missed latitude or longitude"
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "description": "landing page",
      "produces": ["application/json"],
      "responses": {
        "200": {
          "description": "OK"
        },
        "404": {
          "description": "Page Not Found"
        }
      }
    }
  }
}
